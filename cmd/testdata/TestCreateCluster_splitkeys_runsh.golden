#!/usr/bin/env bash

# This script run a charon node using the p2pkey in the
# local directory and the manifest in the parent directory

charon run \
  --data-dir="charon/node0" \
  --manifest-file="charon/manifest.json" \
  --monitoring-address="127.0.0.1:8003" \
  --validator-api-address="127.0.0.1:8004" \
  --p2p-tcp-address=127.0.0.1:8001 \
  --p2p-udp-address=127.0.0.1:8002 \
